%%%タイトルコマンドの制作%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\def\maketitle{%
  \par%
  \begingroup%
    \def\thefootnote{\fnsymbol{footnote}}%
    \def\@makefnmark{\hbox to 0pt{$^{\@thefnmark}$\hss}}%
    \if@twocolumn \twocolumn[\@maketitle]%
    \else%
      \newpage%
      \global\@topnum\z@%
      \@maketitle%
    \fi%
    \thispagestyle{empty}%
    \@thanks%
  \endgroup%
  \setcounter{footnote}{0}%
  \let\maketitle=\relax%
  \let\@maketitle=\relax%
  \gdef\@id{}%
  \gdef\@title{}%
  \gdef\@etitle{}%
  \gdef\@lab{}%
  \gdef\@name{}%
  \gdef\@tname{}%
  \gdef\@ename{}%
}%

\def\@maketitle{%
  \twocolumn[
  %\newpage%
  \begin{flushleft}
    \fontsize{11pt}{0pt}\selectfont
    \indent
    {\bf \@id \par}
  \end{flushleft}
  \null%
  \vskip 1em%
  \begin{center}%
      {\fontsize{15pt}{0pt}\selectfont \@title\par}%
    \vspace*{1em}%
    {\fontsize{11pt}{0pt}\selectfont \@name\hspace{27pt}指導教員：\@tname \par}
    \vspace*{0.4em}%
      {\fontsize{13pt}{0pt}\selectfont \@etitle\par}%
    \vspace*{1em}%
    {\fontsize{11pt}{0pt}\selectfont \@ename \par}
  \end{center}%
  \vskip 1em%
  ]
}%
\def\id#1{\long\gdef\@id{#1}}%
\def\title#1{\long\gdef\@title{#1}}%
\def\etitle#1{\long\gdef\@etitle{#1}}%
\def\name#1{\long\gdef\@name{#1}}%
\def\tname#1{\long\gdef\@tname{#1}}%
\def\ename#1{\long\gdef\@ename{#1}}%
